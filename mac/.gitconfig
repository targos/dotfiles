[color]
	ui = true
[core]
	excludesfile = ~/.gitignore_global
	pager = diff-so-fancy | less --tabs=4 -RFX
	autocrlf = input
[commit]
	gpgsign = true
[push]
	default = simple
	recurseSubmodules = check
[help]
	autocorrect = 1
[pull]
	merge = true
	ff = only
[init]
	defaultBranch = main

# Mac-specific
[interactive]
	diffFilter = diff-so-fancy --patch
[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
	newHighlight = green bold 22
[color "diff"]
	meta = 11
	frag = magenta bold
	func = 146 bold
	commit = yellow bold
	old = red bold
	new = green bold
	whitespace = red reverse
